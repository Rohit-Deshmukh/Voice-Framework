# Voice Framework Configuration
# Copy this file to .env and customize as needed

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Set to true to use database storage (requires setup)
# Default: false (uses in-memory storage, no setup required)
USE_DATABASE=false

# Database connection string (only used when USE_DATABASE=true)
# DATABASE_URL=sqlite+aiosqlite:///./voice_framework.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================
# Enable LLM features (naturalization, steering, sentiment analysis)
# Default: false (uses deterministic simulation, faster and cheaper)
ENABLE_LLM=false

# Maximum number of transcript entries to keep in memory per test run
# Lower values = less memory usage
# Default: 1000
MAX_TRANSCRIPT_SIZE=1000

# ============================================
# LLM API KEYS (only needed if ENABLE_LLM=true)
# ============================================
# OpenAI API key for GPT models
# OPENAI_API_KEY=sk-...

# Anthropic API key for Claude models
# ANTHROPIC_API_KEY=sk-ant-...

# OpenAI model to use (default: gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# Anthropic model to use (default: claude-3-5-sonnet-20241022)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# LLM temperature setting (0.0-1.0, default: 0.2)
# LLM_TEMPERATURE=0.2

# ============================================
# TWILIO INTEGRATION (only for live calls)
# ============================================
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=...
# TWILIO_DEFAULT_FROM=+15555555555

# ============================================
# API AUTHENTICATION (optional)
# ============================================
# API key for securing endpoints
# Leave empty for unsecured local development
# VOICE_API_KEY=your-secret-key-here

# API key header name (default: x-api-key)
# VOICE_API_KEY_HEADER=x-api-key

# ============================================
# RECOMMENDED CONFIGURATIONS
# ============================================

# For CI/CD and automated testing:
# USE_DATABASE=false
# ENABLE_LLM=false
# MAX_TRANSCRIPT_SIZE=500

# For development (fast iteration):
# USE_DATABASE=false
# ENABLE_LLM=false
# MAX_TRANSCRIPT_SIZE=1000

# For realistic testing:
# USE_DATABASE=false
# ENABLE_LLM=true
# MAX_TRANSCRIPT_SIZE=1000
# OPENAI_API_KEY=sk-...

# For production:
# USE_DATABASE=true
# ENABLE_LLM=true
# MAX_TRANSCRIPT_SIZE=2000
# DATABASE_URL=postgresql+asyncpg://...
# OPENAI_API_KEY=sk-...

# For resource-constrained environments:
# USE_DATABASE=false
# ENABLE_LLM=false
# MAX_TRANSCRIPT_SIZE=100
